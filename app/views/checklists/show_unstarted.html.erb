<% if true %>

<div class="container ">
	<div class="checklist-details">
		<div class="row">
			<div class= "col-md-8 col-md-offset-2 ">
				<div class="row">
					<div class="col-md-12">
						<ol class="breadcrumb">
  							<li><a href="/">Home</a></li>
  							<li><a href="/checklists">Templates</a></li>
  							<li class="active"><%= @checklist.title.titleize %></li>
						</ol>
						<h1 class="page-header">
							<%= @checklist.title.titleize %>
						</h1>	
						<div class="btn-toolbar pull-right">
							Crée par <%= @checklist.createur.capitalize %>
						</div>
						<p class="lead">
							<%= @checklist.description.capitalize %>
						</p>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<div class="bottom30">
							<%= render 'tasks/form' %>
						</div>

						<% if @checklist.tasks.count == 0 %>    
							<p>
						    	No tasks 
						    </p>
						<% elsif  @checklist.tasks.count > 0 %> 


								<% n =0 %>
								<% @checklist.tasks.order("created_at desc").each do |task| %>
									<div class="input-group input-group-lg">
											<span class="input-group-addon"><%= link_to image_tag("delete.png", size: "15x15"), checklist_task_path(@checklist, task),
							              method: :delete,
							             data: { confirm: 'Are you sure?' } %></span>
											<span class="input-group-addon"><span class="glyphicon glyphicon-ok"></span></span>	
			  								<input type="text" class="form-control task" placeholder='<%= task.description %>' disabled="disabled">
									</div>
							 	<% end %>
						<% end %> 	

						<div class="btn-toolbar pull-right top30" role="toolbar">
					    	<div class="btn-group">
					    		<%= link_to ' Supprimer', checklist_path(@checklist), 
					    		method: :delete, data: { confirm: 'Are you sure?' },
					    		:class =>"btn btn-danger glyphicon glyphicon-trash", 
					    		:type => "button",
					    		:style => "height:34px" %>
					    		<%= link_to ' Démarrer', checklist_start_path(@checklist), 
					    		:class =>"btn btn-success glyphicon glyphicon-ok", 
					    		:type => "button",
					    		:style => "height:34px" %>
					      </div>
					    </div>					
						
					</div>				
				</div> <!-- row -->


				<br/><br/><br/><br/>

				<% if false %>
				<div class="row">
					<div class="display-add">
						<p>
							<% if @checklist.progess == 0 %>
								<%= form_for @checklist do |f| %>
							        <div id="name" type="text">
								        <% f.label :garant %></h2>
								        <%= f.text_field :garant, :autofocus=>true, :autocomplete=>"off", :placeholder=>"Garant" %>
							        </div>
									<%= f.submit ' Démarrer cette nouvelle checklist'   %>
								<% end %>
							<% elsif @checklist.progess == 1 %>
								<a href="#"><span class="glyphicon glyphicon-plus"></span></a>
								<%= link_to "Add tasks", checklist_new_tasks_path(@checklist) %>
							<% elsif @checklist.progess == 2 %>
								<h2>Objectif atteint</h2>
							<% end %>
						</p>
					</div>
				</div>
				<div class="row">
					<div class="display-just-save">
						<p>		
							<%= link_to "Enregistrer la checklist sans la commencer", checklists_path %>
						</p>
					</div>
				</div>			
				<% end %>

			</div>
		</div>		
	</div>
</div>
	
<% end %> <!-- end of if true/false -->