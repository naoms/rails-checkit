<div class="container" id="createNewCl">
  <div class= "col-md-8 col-md-offset-2 ">
    <%= form_for(@checklist, :html => {:class => "main-form"}) do |f| %>
      <% if @checklist.errors.any? %>
        <p>
          <h2><%= pluralize(@checklist.errors.count, "error") %> prohibite this checklist from being saved: </h2> 
        </p>
        <ul>
          <% @checklist.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
      
      <div class="page-header">
        <div class="row">
          <div class="col-md-5">
            <div class="input-group input-group-lg">
              <% f.label :title %>
              <%= f.text_field :title, :placeholder => " Title ", :type => "text", :class => "form-control", :autofocus => true, :autocomplete=>"off"%>
            </div>
          </div>
        </div>
      </div>    

      <div class="row bottom30">
        <div class="col-md-12">
          <div class="lead">
            <% f.label :description %>
            <%= f.text_field :description, :placeholder => " Add a description to your Checklist ",:type => "text", :class => "form-control", :autocomplete => "off" %>
          </div>
        </div>
      </div>


      <div class="row top30 bottom30">
        <div class="col-md-3">
          <div class="input-group">
            <span class="input-group-addon">@</span>
            <% f.label :createur %>
            <%= f.text_field :createur, :placeholder => " Createur", :type => "text", :class => "form-control" %>
          </div>
        </div>
      </div>

      <div class="row top30">
        <div class="col-md-12">
          <span class="input-group-btn" >
            <%= button_tag(type: 'submit', class: "btn btn-primary" ) do %>
            Add tasks to checklist
            <% end %>
          </span>
        </div>
      </div>

    <% end %>
  </div>  
</div>



