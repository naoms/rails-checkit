<div class="container">
	<div class= "col-md-8 col-md-offset-2 top30">
		<div class="row">
			<div class="col-md-12">
				<ol class="breadcrumb">
						<li><a href="/main/index">Home</a></li>
						<li class="active"><a href="/checklists">Modèles</a></li>
				</ol>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class= "col-md-12 col-md-offset-2">
	<% n =0 %>
	<div class="row new-checklist-row">
		<div class="col-md-2 created-row top30"><!-- Column create -->
			<div class="row top30">
				<div class="empty-template top30">
					<p>
						<center><%= link_to image_tag("plus.png", size: "30x30"), new_checklist_path %></center>
					</p>	
				</div>

			</div>
			<div class="row">
				<div class="empty-template-text">
					<p>
						<center><%= link_to 'Créer ton modèle', new_checklist_path %></center>
					</p>	
				</div>
				
			</div>			
		</div>
		<div class="col-md-6 template-row"><!-- Column templates -->
			<div class="page-header">
				<h1>Tout les modèles</h1>
			</div>
			<div class="row template-checklist-row">


			<table class="table table-striped table-condensed">
				    <thead>
				        <tr>
				            <th>Titre</th>
				            <th>Description</th>			           
							<th>Créateur</th>
				            <th></th>
				        </tr>
				    </thead>
				    <tbody>
				    	<% @checklists.each do |checklist| %>
				    		<% if checklist.progess == 0 %>   <!-- if checklist started -->
						        <tr>
						            <td><%=link_to checklist.title, checklist_path(checklist) %></td>
						            <td>
						            	<% if checklist.description.blank? %>
											Pas de description <br>
										<% else %>
											<%= checklist.description %><br>
										<% end %>
						            </td>
						            <td>
						            	<% if !(checklist.createur.blank?) %>
											<h6 id="createur" font-size:"1"><%= checklist.createur %></h6>
										<% else %>
											Pas de nom
										<% end %>
									</td>
						            <td><%= link_to image_tag("delete.png", size: "15x15"), checklist_path(checklist),
							              method: :delete,
							             data: { confirm: 'Etes vous sûr?' } %></td>
						        </tr>
					        <% end %>
				    	<% end %>
				    </tbody>
				</table>
			</div>
		</div>
	</div>
</div>
