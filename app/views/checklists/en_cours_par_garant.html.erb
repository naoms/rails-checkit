<div class="container">
	<div class= "col-md-8 col-md-offset-2 top30 ">
		<div class="row">
			<div class="col-md-12">
				<ol class="breadcrumb">
						<li><a href="/main/index">Home</a></li>
						<li class="active"><a href="/checklists/en_cours">En cours</a></li>
				</ol>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class= "col-md-8 col-md-offset-2 ">
		<p>
		<h1 align="left" >Checklists en cours</h1>
		</p>

		<div class="row index-en-cours">
			<div class="col-md-12 top30">
				<table class="table table-striped table-condensed">
				    <thead>
				        <tr>
				            <th>Titre</th>
				            <th>Description</th>
				            <th>Début
				            <%= link_to '/checklists/en_cours', :class => 'button white' do %>
										    <span class="glyphicon glyphicon-chevron-down"></span>
							<% end %></th>
				            <th>Garant</th>
				            <th>Créateur
							<%= link_to '/checklists/en_cours_par_createur', :class => 'button white' do %>
										    <span class="glyphicon glyphicon-chevron-down"></span>
							<% end %></th>
				            <th></th>
				        </tr>
				    </thead>
				    <tbody>
				    	<% @checklists.each do |checklist| %>
				    		<% if checklist.progess == 1 %>   <!-- if checklist started -->
						        <tr>
						            <td><%=link_to checklist.title, checklist_path(checklist) %></td>
						            <td>
						            	<% if checklist.description.blank? %>
											Pas de description <br>
										<% else %>
											<%= checklist.description %><br>
										<% end %>
						            </td>
						            <td>
						            	<% if checklist.timeStarted != nil %>
										<h6 font-size:"1"><i><%= checklist.timeStarted.to_formatted_s(:short) %></i></h6>
										<% end %>
						            </td>
						            <td><% if checklist.garant != nil %>
									<h6 id="garant" font-size:"1"><%= checklist.garant %></h6>
									<% end %></td>
						            <td><% if checklist.createur != nil %>
									<h6 id="createur" font-size:"1"><%= checklist.createur %></h6>
									<% end %></td>
						            <td><%= link_to image_tag("delete.png", size: "15x15"), checklist_path(checklist),
							              method: :delete,
							             data: { confirm: 'Etes vous sûr?' } %></td>
						        </tr>
					        <% end %>
				    	<% end %>
				    </tbody>
				</table>
			</div>
		</div><!-- end of row-->
	</div>
</div>





















<% if false %>

	<div class="container">
	<br><br>
	<h1 align="left" >Checklist en cours</h1><br><br>


		<% n =0 %>
		<div class="row">
		<% @checklists.each do |checklist| %>	

			<% if n%3 == 0  %>
					</div><div class="row">
				<% end %>


			<% if checklist.progess == 1 %>   <!-- if checklist started -->
				<div class="col-md-3" id="started">
				<% n = n+1 %>	
				<b>Title : </b><%=link_to checklist.title, checklist_path(checklist) %><br>
				<!-- <%= link_to image_tag("inProgress.png" , size: "30x30"), checklist_start_path(checklist) %><br> -->
				<% if checklist.description.blank? %>
						no description <br>
				<% else %>
					<b>Description : </b><%= checklist.description %><br>
				<% end %>
				<!-- <b>Status : </b><%= checklist.progess.to_i  %><br> -->
